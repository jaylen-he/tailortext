{
  "manifest_version": 3,
  "name": "TailorText",
  "version": "1.0",
  "description": "A language learning extension integrated, tailored to your daily life",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "/src/popup.html",
    "default_icon": {
      "16": "src/dolphin-192.jpg",
      "48": "src/dolphin-192.jpg",
      "128": "src/dolphin-192.jpg"
    }
  },
  "icons": {
    "16": "src/dolphin-192.jpg",
    "48": "src/dolphin-192.jpg",
    "128": "src/dolphin-192.jpg"
  }
  }