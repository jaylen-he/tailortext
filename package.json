{
  "name": "word-learner-extension",
  "version": "0.1.0",
  "description": "Word Learner Chrome Extension",
  "scripts": {
    "build:js": "esbuild index.tsx --bundle --outfile=dist/bundle.js --platform=browser --format=esm --jsx=automatic --loader:.ts=tsx --define:process.env.API_KEY=\\\"${API_KEY}\\\" --sourcemap",
    "build": "npm run build:js",
    "watch:js": "esbuild index.tsx --bundle --outfile=dist/bundle.js --platform=browser --format=esm --jsx=automatic --loader:.ts=tsx --define:process.env.API_KEY=\\\"${API_KEY}\\\" --sourcemap --watch",
    "dev": "npm run build:js"
  },
  "dependencies": {
    "@google/genai": "^1.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.23.0",
    "typescript": "^5.5.4"
  }
}